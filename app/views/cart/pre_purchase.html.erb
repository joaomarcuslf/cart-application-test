<form id="pre_purchase" action="/order" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="field">
      <label class="label">Type you name:</label>
        <div class="control">
            <input name="username" class="input" type="text" placeholder="Your name">
        </div>
    </div>
    <%= render 'products_table' %>

    <div class="control">
      <button class="button is-primary">Place order</button>
    </div>
</form>
